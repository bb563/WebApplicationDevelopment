@model WebStore.Models.Product

<div class="detail-product">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageURL" class="img-fluid" alt="@Model.ProductName">
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <p>@Model.Description</p>
            <p><strong>Price:</strong> $@Model.Price.ToString("N2")</p>
            @if (Model.Category != null)
            {
                <p><strong>Category:</strong> @Model.Category.CategoryName</p>
            }
            <!-- Add more details as needed -->
            <div class="mt-3">
                <a href="/ShoppingCart/AddtoCart/@Model.ProductID" class="btn btn-primary">
                    <i class="fas fa-shopping-cart"></i> Buy Now
                </a>
            </div>
        </div>
    </div>
</div>
