@model List<WebStore.Models.Customer>

@{
    ViewBag.Title = "Customer Management";
}

<div class="container mt-4">
    

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="customer">
        <table class="table table-bordered table-hover customer-management">
            <thead class="thead-dark">
                <tr>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerID</td>
                        <td>@Html.DisplayFor(modelItem => customer.FirstName) @Html.DisplayFor(modelItem => customer.LastName)</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = customer.CustomerID }, new { @class = "btn btn-info btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
